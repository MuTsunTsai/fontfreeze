{
	"compilerOptions": {
		"target": "ES2017",
		"lib": [
			"DOM",
			"ESNext"
		],
		"isolatedModules": true,
		"strict": true,
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"noEmit": true,
		"skipLibCheck": true,
		"types": [
			"wicg-file-system-access",
			"gtag.js",
			"user-agent-data-types"
		]
	},
	"include": [
		"./**/*.ts",
		"./**/*.vue"
	]
}